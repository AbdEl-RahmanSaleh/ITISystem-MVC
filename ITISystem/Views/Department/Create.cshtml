@model Department
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Create - Department";

}

    <div class="row mb-3">
        <div class="col-2"></div>
        <div class="col-8">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="@Model.DeptId" class="col-form-label">DepartmentId</label>
                    <input asp-for="@Model.DeptId" class="form-control" />
                    <span asp-validation-for="DeptId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.DeptName" class="col-form-label">Department Name</label>
                    <input asp-for="@Model.DeptName" class="form-control" />
                    <span asp-validation-for="DeptName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Capacity" class="col-form-label"></label>
                    <input asp-for="@Model.Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Active" />
                <label class="form-check-label" asp-for="@Model.Active"></label>
                <span asp-validation-for="@Model.Active" class="text-danger"></span>
        </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>


