@model Department
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Delete - Department";

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>
    <div class="row mx-5 mb-3 mt-3">
        <div class="col-8">
            <h2 class="text-danger">Delete Department</h2>
            <h3>Are you sure you want to delete this Department?</h3>
            <div>
                <hr />
                <form asp-action="Delete" asp-controller="Department" method="post">
                    <div class="form-group has-danger">
                        <label asp-for="@Model.DeptName" class="col-form-label"></label>
                        <input asp-for="@Model.DeptName" class="form-control" readonly />
                    </div>
                    <div class="form-group has-danger">
                        <label asp-for="@Model.Capacity" class="col-form-label"></label>
                        <input asp-for="@Model.Capacity" class="form-control" readonly />
                    </div>

                    <br />
                    <input type="Submit" value="Delete" class="btn btn-danger" /> |
                    <a class="btn btn-light" asp-action="Index" asp-route-id="@Model.DeptId">Cancel</a>

                </form>
            </div>
        </div>
    </div>
</body>
</html>
