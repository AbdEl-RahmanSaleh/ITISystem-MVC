@model List<Department>
@{
    Layout = "_Layout";
    ViewData["Title"] = "List Departments";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>
    <h1 class="mx-2">All Department</h1>
    <br />
    <a href="/Department/create" class="btn btn-success mx-2">
        Add new Department
    </a>
    <br />
    <br />
    <div class="mx-auto" style="width:90%">

        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>

                <th>
                    Capacity
                </th>
                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
                <th>
                    Manage Courses
                </th>
                
            </tr>


            @if (Model.Count() > 0)
            {
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>
                            @dept.DeptId
                        </td>

                        <td>
                            @dept.DeptName
                        </td>

                        <td>
                            @dept.Capacity
                        </td>
                        
                        <td>
                            <a href="/Department/details/@dept.DeptId" class="btn btn-info">Details</a>
                        </td>
                        <td>
                            <a href="/Department/update/@dept.DeptId" class="btn btn-secondary">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@dept.DeptId">Remove</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Department" asp-action="ShowCourses" asp-route-id="@dept.DeptId">Show Courses</a>
                            <a class="btn btn-primary" asp-controller="Department" asp-action="ManageCourses" asp-route-id="@dept.DeptId">Manage Courses</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <td colspan="5" class="alert alert-danger">No Department Exists</td>
            }

        </table>
   

</body>
</html>
