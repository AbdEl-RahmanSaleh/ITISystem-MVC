@model IEnumerable<Role>
@{
    ViewData["Title"] = "Index";
}
<style>
    .searchClass{
        display:flex;
        justify-content:center;
    }
</style>
<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-success">
    Add New Role <i class="bi bi-plus-circle-dotted"></i>
</a>
<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover" style="align-items : center;">
        <thead>
            <tr>
                <th>Id</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => item.Id)</td>
                    <td>@Html.DisplayFor(x => item.Name)</td>

                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id" style="width: 100px;">
                            Details <i class="bi bi-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@item.Id" style="width: 100px;">
                            Update <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" style="width: 100px;">
                            Delete <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Roles Found</h3>
    </div>
}
