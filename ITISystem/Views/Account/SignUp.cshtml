@model RegisterViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card">
    <h2>Register Form</h2>
    <form method="post">
            <label asp-for="@Model.Email" class="col-form-label"></label>
            <input asp-for="@Model.Email" class="form-control" placeholder="Enter your email"/>
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="@Model.UserName" class="col-form-label"></label>
            <input asp-for="@Model.UserName" class="form form-control" placeholder="Enter your Username" />
            <span asp-validation-for="UserName" class="text-danger"></span>

            <label asp-for="@Model.Password" class="col-form-label"></label>
            <input asp-for="@Model.Password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        
            <label asp-for="@Model.ConfirmPassword" class="col-form-label"></label>
            <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <button type="submit">Register</button>
    </form>
    <div>Already have an account? <br /><a asp-action="LogIn" asp-controller="Account">Login here</a></div>
</div>

@section ValidationLibraries {
    <partial name="_ValidationScriptsPartial" />
}